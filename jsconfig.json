{
  "compilerOptions": {
    "baseUrl":"src",
    "module": "es2015",
    "target": "es2015",
    "jsx": "react",
    "experimentalDecorators": true,
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native"
  ],
  "exclude": [
    "build",
    "node_modules",
    "jest.config.js",
    "App.js"
  ],
  "include": [
    "src"
  ],
  "compileOnSave": false
}